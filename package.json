{
    "name": "htmx-bun-repo",
    "private": true,
    "scripts": {
        "examples:todo": "cd examples/todo && bun --hot -r ../../packages/htmx-bun/view/plugin.ts ../../packages/htmx-bun/server/index.ts",
        "examples:docs": "cd examples/docs && bun --hot -r ../../packages/htmx-bun/view/plugin.ts ../../packages/htmx-bun/server/index.ts",
        "build:grammar": "bun scripts/build-grammar.ts",
        "tests:htmx-bun": "cd packages/htmx-bun && bun tests",
        "clear-snapshots": "find . ! -path \"*node_modules*\" -name __snapshots__ | xargs rm -rf"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/moonlight-pm/htmx-bun.git"
    },
    "workspaces": ["packages/*", "examples/*"],
    "dependencies": {
        "@biomejs/biome": "^1.5.3",
        "@types/js-yaml": "^4.0.9",
        "js-yaml": "^4.1.0"
    }
}
