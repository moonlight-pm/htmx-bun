{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Debug language extension in Todo example",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}/packages/vscode",
                "--folder-uri=${workspaceRoot}/examples/todo"
            ],
            "autoAttachChildProcesses": true
        },
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Debug language extension in view fixtures",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}/packages/vscode",
                "--folder-uri=${workspaceRoot}/packages/htmx-bun/view/__fixtures__"
            ],
            "autoAttachChildProcesses": true
        },
        {
            "type": "bun",
            "request": "launch",
            "name": "Debug Example: Todo",
            "program": "${workspaceRoot}/packages/htmx-bun/bin/htmx-bun.ts",
            "cwd": "${workspaceRoot}/examples/todo"
        },
        {
            "type": "bun",
            "request": "launch",
            "name": "Debug File",
            "runtimeArgs": ["-r", "view/plugin.ts"],
            "program": "${workspaceRoot}/packages/htmx-bun/debug.ts",
            "cwd": "${workspaceRoot}/packages/htmx-bun",
            "watchMode": "hot"
        }
    ]
}
