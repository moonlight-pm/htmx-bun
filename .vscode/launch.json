{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Debug Extension: Language",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}/packages/vscode",
                "--folder-uri=${workspaceRoot}/examples/todo"
            ],
            "autoAttachChildProcesses": true
        },
        {
            "type": "bun",
            "request": "launch",
            "name": "Debug Example: Todo",
            "program": "${workspaceRoot}/packages/htmx-bun/bin/htmx-bun.ts",
            "cwd": "${workspaceRoot}/examples/todo",
            "watchMode": "hot"
        }
    ]
}
